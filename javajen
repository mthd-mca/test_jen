pipeline{
  agent any

    tools{
      jdk "jdk21"
    }

  stages{
    stage('Checkout'){
      stage{
       git branch:"main", url:"https://github.com/mthd-mca/test_jen"
      }  
    }

    stage('complie'){
      step{
        echo "Compiling java program"
        sh 'javac Hello.java'
      }
    }    

   stage('Run'){
     steos{
       echo "Running a java program...."
       sh "java Hello"
     }
   }
}

post{
  success{
    echo "Build and execution successful"
  }
failure{
  echo "Build failed"
}
}
  }

