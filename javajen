pipeline {
    agent any

    tools {
        jdk "jdk21"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mthd-mca/test_jen'
            }
        }

        stage('Compile') {
            steps {
                echo "Compiling Java program"
                sh 'javac Hello.java'
            }
        }

        stage('Run') {
            steps {
                echo "Running a Java program...."
                sh 'java Hello'
                sh 'python3 test.py'

            }
        }
    }

    post {
        success {
            echo "Build and execution successful"
        }
        failure {
            echo "Build failed"
        }
    }
}
